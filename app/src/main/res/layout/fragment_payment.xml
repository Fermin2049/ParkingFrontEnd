<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información de la reserva -->
        <TextView
            android:id="@+id/tvReservaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de Reserva"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Monto base de la reserva -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto base"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- EditText para ingresar cantidad de horas -->
        <EditText
            android:id="@+id/etHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa cantidad de horas (solo enteros)"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Botón para confirmar el pago simulado -->
        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Pago"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>